<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Time Capsule{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>‚è≥</text></svg>">

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

        {% block stylesheets %}{% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body class="bg-light">

        {# --- 1. BARRE DE NAVIGATION --- #}
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow mb-4">
            <div class="container">
                <a class="navbar-brand fw-bold" href="{{ path('app_capsule_index') }}">
                    <i class="fas fa-hourglass-half"></i> Time Capsule
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link active" href="{{ path('app_capsule_index') }}">Mes Capsules</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_capsule_new') }}">Nouvelle Capsule</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav ms-auto">
                        {% if app.user %}
                            {# MENU UTILISATEUR CONNECT√â #}

                            {# Lien Admin (Visible seulement si ROLE_ADMIN) #}
                            {% if is_granted('ROLE_ADMIN') %}
                                <li class="nav-item me-2">
                                    <a class="btn btn-warning btn-sm mt-1 fw-bold" href="{{ path('admin') }}" target="_blank">
                                        <i class="fas fa-crown"></i> Admin Panel
                                    </a>
                                </li>
                            {% endif %}

                            <li class="nav-item">
                                <span class="nav-link text-white">
                                    <i class="fas fa-user-circle"></i> {{ app.user.email }}
                                </span>
                            </li>
                            <li class="nav-item">
                                {# üëâ C'EST ICI LA CORRECTION DU BUG DE DECONNEXION #}
                                <a class="nav-link btn btn-danger btn-sm text-white ms-2 px-3 mt-1" href="{{ path('app_logout') }}">
                                    <i class="fas fa-sign-out-alt"></i> D√©connexion
                                </a>
                            </li>
                        {% else %}
                            {# MENU VISITEUR #}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_login') }}">Se connecter</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_register') }}">S'inscrire</a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </nav>

        {# --- 2. MESSAGES FLASH (Succ√®s / Erreur) --- #}
        <div class="container">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
            {% endfor %}
        </div>

        {# --- 3. CONTENU DE LA PAGE --- #}
        {% block body %}{% endblock %}

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>
