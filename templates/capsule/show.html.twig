{% extends 'base.html.twig' %}

{% block title %}Capsule{% endblock %}

{% block body %}
    <h1>Capsule</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ capsule.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ capsule.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ capsule.content }}</td>
            </tr>
            <tr>
                <th>SendDate</th>
                <td>{{ capsule.sendDate ? capsule.sendDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>TargetEmail</th>
                <td>{{ capsule.targetEmail }}</td>
            </tr>
            <tr>
                <th>IsSent</th>
                <td>{{ capsule.isSent ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>ImageFilename</th>
                <td>{{ capsule.imageFilename }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ capsule.createdAt ? capsule.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_capsule_index') }}">back to list</a>

    <a href="{{ path('app_capsule_edit', {'id': capsule.id}) }}">edit</a>

    {{ include('capsule/_delete_form.html.twig') }}
{% endblock %}
